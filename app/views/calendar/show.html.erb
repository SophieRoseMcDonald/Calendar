<h1 id="daleytasks"> Daley Tasks</h1>
<div class="row">
  <div class="col-md-12 text-center">
    <div class="well controls">
      <%= link_to "Today", events_path, class: "btn btn-default" %>
      <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-backward"></i>
      <%end%>
      <h1 id="dateyear"> <%= "#{@date.strftime("%B")} #{@date.year}" %> </h1>
      <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
      <i class="glyphicon glyphicon-forward"></i>
      <%= link_to "Add Event", new_event_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class= "calendar", id="cal">
      <%= calendar @date do |date| %>
        <%= link_to date.day, "#{events_path}/#{date}" %>
            <% if @events_by_date[date] %>
              <ul>
              <% @events_by_date[date].each do |event| %>
                <li><%= link_to event.name, event %></li>
              <% end %>
              </ul>
          <% end %>
            <!-- <% Events.where(event_start_date: event_start_date..event_end_date).each do |event| %> -->
        <% end %>
          <!-- #highlight code here, helper method? -->
      <% end %>
    </div>
  </div>
</div>
